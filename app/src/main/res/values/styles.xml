    <!-- snackbar style in res/values -->
    <style name="SnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/white</item>
    </style>
    <style name="textAppearrance" parent="android:Widget.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="itemTextAppearance">@style/textAppearrance</item>
    </style>

    <style name="SwitchStyle" parent="Theme.MaterialComponents.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/deep_orange</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

</resources>
