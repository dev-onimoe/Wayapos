<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/invite_a_friend"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/inviteAFriendTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_rewarded_for_inviting_friends_to_wayabank"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/infoGraphic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/inviteAFriendTxt"
                    app:srcCompat="@drawable/refer_earn_info_grahpics" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintBottom_toBottomOf="@id/firstCircle"
                    app:layout_constraintEnd_toEndOf="@id/lastCircle"
                    app:layout_constraintStart_toStartOf="@id/firstCircle"
                    app:layout_constraintTop_toTopOf="@id/firstCircle"
                    app:srcCompat="@drawable/gray_dotted_line" />

                <ImageView
                    android:id="@+id/firstCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/green_circle"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/infoGraphic" />

                <TextView
                    android:id="@+id/youInviteTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/you_invite_na_friend"
                    app:layout_constraintEnd_toEndOf="@id/firstCircle"
                    app:layout_constraintStart_toStartOf="@id/firstCircle"
                    app:layout_constraintTop_toBottomOf="@id/firstCircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/firstCircle"
                    app:layout_constraintEnd_toEndOf="@id/firstCircle"
                    app:layout_constraintStart_toStartOf="@id/firstCircle"
                    app:layout_constraintTop_toTopOf="@id/firstCircle" />

                <ImageView
                    android:id="@+id/secondCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_circle"
                    app:layout_constraintEnd_toStartOf="@id/lastCircle"
                    app:layout_constraintStart_toEndOf="@id/firstCircle"
                    app:layout_constraintTop_toTopOf="@id/firstCircle" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/they_make_5_ntransaction"
                    app:layout_constraintEnd_toEndOf="@id/secondCircle"
                    app:layout_constraintStart_toStartOf="@id/secondCircle"
                    app:layout_constraintTop_toBottomOf="@id/secondCircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/secondCircle"
                    app:layout_constraintEnd_toEndOf="@id/secondCircle"
                    app:layout_constraintStart_toStartOf="@id/secondCircle"
                    app:layout_constraintTop_toTopOf="@id/secondCircle" />


                <ImageView
                    android:id="@+id/lastCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/green_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/firstCircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/you_get_nngn_100"
                    app:layout_constraintEnd_toEndOf="@id/lastCircle"
                    app:layout_constraintStart_toStartOf="@id/lastCircle"
                    app:layout_constraintTop_toBottomOf="@id/lastCircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/lastCircle"
                    app:layout_constraintEnd_toEndOf="@id/lastCircle"
                    app:layout_constraintStart_toStartOf="@id/lastCircle"
                    app:layout_constraintTop_toTopOf="@id/lastCircle" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/invitedPeopleArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/youInviteTxt">

                    <ImageView
                        android:id="@+id/invitePeopleIc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/people_invited_ic" />

                    <TextView
                        android:id="@+id/peopleInvitedTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/people_you_invited"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@id/invitePeopleIc"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_people_you_invites"
                        android:textColor="@color/grey"
                        app:layout_constraintStart_toStartOf="@id/peopleInvitedTxt"
                        app:layout_constraintTop_toBottomOf="@+id/peopleInvitedTxt" />

                    <TextView
                        android:id="@+id/invitedCountTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="0"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/invitedPeopleArrow"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/invitedPeopleArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/gray_arrow_right" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/moneyEarnedArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/invitedPeopleArea">

                    <ImageView
                        android:id="@+id/moneyEarnIc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/naira_ic" />

                    <TextView
                        android:id="@+id/moneyEarnTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/money_earned"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@id/moneyEarnIc"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from_all_your_invites"
                        android:textColor="@color/grey"
                        app:layout_constraintStart_toStartOf="@id/moneyEarnTxt"
                        app:layout_constraintTop_toBottomOf="@+id/moneyEarnTxt" />

                    <TextView
                        android:textSize="11sp"
                        android:id="@+id/moneyEarned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="NGN1000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/moneyEarnArrow"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/moneyEarnArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/gray_arrow_right" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/deep_orange"
                    android:text="@string/invite_a_friend_and_earn"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/moneyEarnedArea" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
