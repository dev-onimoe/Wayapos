<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/filter_black_rl"
    android:background="#95000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slideup_selection_bg"
        android:layout_alignParentBottom="true"
        android:paddingTop="12dp"
        android:paddingBottom="32dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.9"
                android:fontFamily="@font/lato_bold"
                android:textColor="#000000"
                android:textSize="10sp"
                android:text="Filter"/>

            <ImageView
                android:id="@+id/close_view"
                android:layout_width="wrap_content"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical"
                android:scaleType="fitEnd"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:src="@drawable/x_mark_ic"/>
        </LinearLayout>

        <TextView
            android:id="@+id/category_filter_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/stroked_toolbar_bg"
            android:drawableEnd="@drawable/tf_dropdown_ic"
            android:textSize="10sp"
            android:textColor="@color/view_gray"
            android:text="Category"/>
        <Spinner
            android:id="@+id/category_filter_spinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/date_filter_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="14dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/stroked_toolbar_bg"
            android:drawableEnd="@drawable/tf_dropdown_ic"
            android:textSize="10sp"
            android:textColor="@color/view_gray"
            android:text="Date Period"/>
        <Spinner
            android:id="@+id/date_filter_spinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/filter_transaction_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:text="Apply Filter"
            android:textSize="11sp"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/filter_clear_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:text="Clear"
            android:background="@drawable/grey_rounded_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>