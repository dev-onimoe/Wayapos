<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="8dp"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/transaction_type_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center_vertical"
        android:scaleType="fitStart"
        android:src="@drawable/credit_transaction_ic"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trans_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commission"
            android:textSize="13dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/wp_black"/>
        <TextView
            android:id="@+id/trans_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jun 6, 2022 05:30 PM"
            android:layout_marginTop="4dp"
            android:textSize="10dp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/dark_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="end"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trans_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+4,000 NGN"
            android:textSize="16sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/deep_green"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/trans_ref"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="REF: 12345678910"
                android:textAlignment="textEnd"
                android:textSize="10dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/dark_grey"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:src="@drawable/copy_ic"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>